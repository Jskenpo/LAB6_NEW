<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFragment">

    <TextView
        android:id="@+id/Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Search"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="35sp"
        android:layout_margin="30dp"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/widget1"
        android:layout_marginTop="25dp"
        android:layout_width="150dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/Search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/widget2"
        android:background="@drawable/background1"
        >

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/widget2"
        android:layout_marginTop="25dp"
        android:layout_width="150dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/Search"
        app:layout_constraintStart_toEndOf="@id/widget1"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background2"
        >

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/widget3"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/widget1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/widget4"
        android:background="@drawable/backround3"
        >

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/widget4"
        android:layout_marginTop="25dp"
        android:layout_width="150dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@id/widget2"
        app:layout_constraintStart_toEndOf="@id/widget3"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background4"
        >

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>